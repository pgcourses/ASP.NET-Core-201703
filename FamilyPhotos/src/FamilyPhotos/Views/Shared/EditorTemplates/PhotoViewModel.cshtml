@model FamilyPhotos.ViewModel.PhotoViewModel

@Html.ValidationSummary()
<div class="form-group">
    @Html.LabelFor(m => m.Title, htmlAttributes: new { @class= "col-md-2 control-label" })
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.Title, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Description, htmlAttributes: new { @class = "col-md-2 control-label" })
    <div class="col-md-9">
        @Html.TextAreaFor(m => m.Description, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.PictureFromBrowser, htmlAttributes: new { @class = "col-md-2 control-label" })
    <div class="col-md-9">
        <input type="file" name="PictureFromBrowser" class="form-control" />
        @Html.ValidationMessageFor(m => m.PictureFromBrowser)
    </div>
</div>
